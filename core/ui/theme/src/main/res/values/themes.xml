<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SNAPS.AppThemeSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">500</item>

        <item name="postSplashScreenTheme">@style/SNAPS.AppTheme</item>

        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
    </style>

    <!-- todo DayNight after the dark theme is added -->
    <style name="SNAPS.AppTheme" parent="Theme.Material3.DynamicColors.Light">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>

        <item name="android:spotShadowAlpha">0.05</item>
        <item name="android:ambientShadowAlpha">0.05</item>

        <item name="colorAccent">@color/uiAccent</item>
    </style>

</resources>